<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NSN</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NSN.styles.css" asp-append-version="true" />

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>
<body>
    <!--header removed as it somehow affect bootstrap effect-->
    <nav class="navbar sticky-top navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
        <div class="container">

            <!-- Brand → go to Dashboard/Index -->
            <a class="navbar-brand d-flex align-items-center"
               asp-controller="Dashboard" asp-action="Index">
                <img src="~/images/nsn_logo.png" alt="NSN" class="logo" />
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav mx-auto">
                    <!-- Save/Update Token (formerly Home) -->
                    <li class="nav-item nav1">
                        <a class="nav-link nav-item1"
                           asp-controller="Dashboard" asp-action="Index" asp-fragment="save">
                            Save/Update Token
                        </a>
                    </li>

                    <!-- Statistics -->
                    <li class="nav-item nav1">
                        <a class="nav-link nav-item1"
                           asp-controller="Dashboard" asp-action="Index" asp-fragment="stats">
                            Statistics
                        </a>
                    </li>

                    <!-- View Details -->
                    <li class="nav-item nav1">
                        <a class="nav-link nav-item1"
                           asp-controller="Dashboard" asp-action="Index" asp-fragment="details">
                            View Details
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-3">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    <p class="m-0">&copy; Copyright 2025. <span id='footer-name'>NSN Technology</span></p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="m-0">
                        Connect with me on <a class="footer-link" href="">LinkedIn</a>
                        or <a class="footer-link" href="">GitHub</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
